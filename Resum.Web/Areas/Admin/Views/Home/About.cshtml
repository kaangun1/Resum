@using Resum.Web.Models.VMS

@model AboutInsertOrUpdateVM

<div class="col-xl">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@Model.Name @Model.SurName</h5>
            <small class="text-muted float-end">Merged input group</small>
        </div>
        <div class="card-body">
            <form asp-action="About" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="@Model.Id" />
                
                <div class="mb-3">
                    <label class="form-label" asp-for="Name">Name</label>
                    <div class="input-group input-group-merge">
                        <span id="basic-icon-default-fullname1" class="input-group-text"><i class="bx bx-user"></i></span>
                        <input asp-for="Name" class="form-control" placeholder="John Doe" aria-label="John Doe" aria-describedby="basic-icon-default-fullname2">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="SurName">Surname</label>
                    <div class="input-group input-group-merge">
                        <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>

                        <input asp-for=SurName class="form-control" placeholder="Surname" aria-label="ACME Inc." aria-describedby="basic-icon-default-company2">
                        <span asp-validation-for="SurName" class="text-danger"></span>
                       
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email">Email</label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                        <input asp-for=Email class="form-control" placeholder="john.doe" aria-label="john.doe" aria-describedby="basic-icon-default-email2">
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="form-text">You can use letters, numbers &amp; periods</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Phone">Phone No</label>
                    <div class="input-group input-group-merge">
                        <span id="basic-icon-default-phone2" class="input-group-text"><i class="bx bx-phone"></i></span>
                        <input asp-for=Phone class="form-control phone-mask" placeholder="658 799 8941" aria-label="658 799 8941" aria-describedby="basic-icon-default-phone2">
                        <span asp-validation-for="Phone" class="text-danger"></span>

                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Password">Password</label>
                    <div class="input-group input-group-merge">
                        <span id="basic-icon-default-phone2" class="input-group-text"><i class="bx bx-phone"></i></span>
                        <input asp-for=Password class="form-control phone-mask" placeholder="658 799 8941">
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="RePassword">Password</label>
                    <div class="input-group input-group-merge">
                        <span id="basic-icon-default-phone2" class="input-group-text"><i class="bx bx-password"></i></span>
                        <input asp-for=RePassword class="form-control phone-mask" placeholder="658 799 8941">
                        <span asp-validation-for="RePassword" class="text-danger"></span>

                    </div>
                </div>





                <div class="mb-3">
                    <label class="form-label" asp-for="File">Photo</label>
                    <div class="input-group input-group-merge">
                        <span id="photopath" class="input-group-text"><i class='bx bxs-photo-album'></i></span>
                        <input asp-for=File class="form-control">
                        <span asp-validation-for="File" class="text-danger"></span>

                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Description">Description</label>
                    <div class="input-group input-group-merge">
                        <span id="basic-icon-default-message2" class="input-group-text"><i class="bx bx-comment"></i></span>
                        <textarea asp-for=Description class="form-control" placeholder="Hi, Do you have a moment to talk Joe?" aria-label="Hi, Do you have a moment to talk Joe?" aria-describedby="basic-icon-default-message2"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>

                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Address">Address</label>
                    <div class="input-group input-group-merge">
                        <span id="basic-icon-default-message2" class="input-group-text"><i class="bx bx-comment"></i></span>
                        <textarea asp-for=Address class="form-control" placeholder=""></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>

                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</div>