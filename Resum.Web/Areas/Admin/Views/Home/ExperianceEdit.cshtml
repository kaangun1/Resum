@model ExperianceUpdateVM

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Experiance Update</h5>

    </div>
    <div class="card-body">
        <form asp-action="ExperianceEdit" method="post">
            <input type="hidden" asp-for=Id />
            <div class="mb-3">
                <label class="form-label" asp-for="Title">Title</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>
                    <input asp-for=Title class="form-control" id="basic-icon-default-fullname" placeholder="Title ">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="CompanyName">Company</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-buildings"></i></span>
                    <input asp-for="CompanyName" id="basic-icon-default-company" class="form-control" placeholder="ACME Inc." aria-label="ACME Inc." aria-describedby="basic-icon-default-company2">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Description">Description</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-message2" class="input-group-text"><i class="bx bx-comment"></i></span>
                    <textarea asp-for=Description class="form-control" placeholder="Hi, Do you have a moment to talk Joe?" rows="5" cols="15"></textarea>
                </div>
            </div>
           
            <div class="mb-3">
                <label class="form-label" asp-for="StartDate">Start Date</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-calendar"></i></span>
                    <input asp-for="StartDate" class="form-control"                          
                            value="@Model.StartDate.ToString("yyyy-MM-dd")">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="EndDate">End Date</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-calendar"></i></span>
                    <input asp-for="EndDate"
                          value="@Model.EndDate?.ToString("yyyy-MM-dd")"
                           class="form-control">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>
</div>
