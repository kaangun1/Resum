@using Resum.Web.Models.Entities.Concrete
@model List<Experiance>

<span>
    <a asp-action="ExperianceInsert" class="btn btn-primary m-5 ms-5 ">Yeni Kayit </a>

</span>
@if(Model.Count>0)
{
    
    <div class="container-xxl flex-grow-1 container-p-y">

   
<div class="card">
    <h5 class="card-header">Experiance</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>CompanyName</th>
                    <th>Description</th>
                    <th>StartDate</th>
                    <th>EndDate</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
               @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CompanyName</td>
                        <td>@item.Description</td>
                        <td>@item.StartDate</td>
                        <td>@item.EndDate</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="ExperianceEdit" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" asp-action="ExperianceDelete" asp-route-id="@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>
}


